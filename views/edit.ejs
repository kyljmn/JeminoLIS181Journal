<% include partials/header %>
<div class="ui text container">
  <div class="ui raised segment">
    <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Blog Title</label>
        <input type="text" name="blog[title]" value="<%= foundBlog.title %>">
      </div>
      <div class="field">
        <label>Image URL</label>
        <input type="text" name="blog[image]" value="<%= foundBlog.image %>">
      </div>
      <div class="field">
        <label>Body</label>
        <textarea name="blog[body]"><%= foundBlog.body %></textarea>
      </div>
      <button id="PostBtn " class="ui green button" type="submit">Save Changes</button>
    </form>
  </div>
</div>



<% include partials/footer %>
